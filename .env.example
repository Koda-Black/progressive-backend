# Progressive Bar API Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# DEVELOPMENT SETTINGS (MAMP - Local)
# ============================================
# APP_ENV=development
# APP_DEBUG=true
# DB_HOST=localhost
# DB_PORT=8889
# DB_DATABASE=progressive_bar
# DB_USERNAME=root
# DB_PASSWORD=root

# ============================================
# PRODUCTION SETTINGS (TiDB Cloud + Koyeb)
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.koyeb.app
FRONTEND_URL=https://your-frontend.vercel.app

# TiDB Cloud Database
DB_HOST=gateway01.eu-central-1.prod.aws.tidbcloud.com
DB_PORT=4000
DB_DATABASE=progressive_bar
DB_USERNAME=7Pytg6x7dQLMqpU.root
DB_PASSWORD=your-tidb-password

# JWT Authentication (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=86400

# Security
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-admin.vercel.app
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# QR Code Configuration
QR_BASE_URL=https://your-frontend.vercel.app
QR_TABLE_PARAM=table

# Order Queue Settings
MAX_WAIT_TIME_MINUTES=10
KITCHEN_CAPACITY=5
