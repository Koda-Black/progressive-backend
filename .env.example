# Progressive Bar API Environment Configuration
# Copy this file to .env and update values for your environment

# Application
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# MySQL Database (MAMP defaults)
DB_HOST=localhost
DB_PORT=8889
DB_DATABASE=progressive_bar
DB_USERNAME=root
DB_PASSWORD=root

# JWT Authentication (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=86400

# Security
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# QR Code Configuration
QR_BASE_URL=http://localhost:5173
QR_TABLE_PARAM=table

# Order Queue Settings
MAX_WAIT_TIME_MINUTES=10
KITCHEN_CAPACITY=5
